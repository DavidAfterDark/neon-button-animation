--- 
import '../css/normalize.css'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Neon button animation with glow effect using HTML and CSS only">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	body {
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		background: #13151A;
		font-family: monospace;

		@media screen and (min-width: 1440px) {
			height: 100vh;
		}
	}
</style>
